	{  e.onclick = function(e) { e.stopPropagation(); } });

    tr_list.forEach(function(e)
    { 
      e.onclick = function() 
      {  
    	  if(e.dataset.seq == "undefined" || e.dataset.seq == undefined)
    		  return;
    	  
    	  document.location.href = "${rootPath}/notice/detail/" + e.dataset.seq;  
      }
    });
    
    
    
