<div id="notice_body">
	<table>
	<tr class="tr_notice_List">
		<c:if test="${member.roll == 1}"><th>선택</th></c:if>
		<th>NO</th>
		<th>제목</th>
		<th>작성자</th>
		<th>날짜</th>
		<th>조회</th>
		<th>추천</th>
	</tr>
	
	<c:forEach items="${LIST}" var="list" varStatus="i">
	<tr class="tr_notice_List" data-seq="${list.seq}">
		<c:if test="${member.roll == 1}"> <td><input type="checkbox" data-seq="${list.seq}" class="check_seq"></td> </c:if>
		<td>${list.seq}</td>
		<td>${list.title}</td>
		<td>${list.writer}</td>
		<td>${list.dates}-${list.times}</td>
		<td>${list.views}</td>
		<td>${list.likes}</td>
	</tr>	
		<c:if test="${i.last && i.index < 14}">
			<c:forEach begin="${i.index}" end="14" varStatus="j">
				<tr class="tr_notice_List"> <c:forEach begin="0" end="6"> <td></td> </c:forEach> </tr>
			</c:forEach>
		</c:if>
	</c:forEach>
	</table>
</div>
